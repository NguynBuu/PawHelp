<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background gradient -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="135"
                android:startColor="#E8F5F3"
                android:centerColor="#CFEAE6"
                android:endColor="#B8E3DD"
                android:type="linear"/>
        </shape>
    </item>

    <!-- Icon/Pattern overlay (simulating a community/group image) -->
    <item
        android:top="60dp"
        android:bottom="60dp"
        android:left="80dp"
        android:right="80dp">
        <shape android:shape="oval">
            <solid android:color="#80FFFFFF"/>
        </shape>
    </item>

    <!-- Center accent -->
    <item
        android:top="80dp"
        android:bottom="80dp"
        android:left="100dp"
        android:right="100dp">
        <shape android:shape="oval">
            <solid android:color="#5DB1A8"/>
        </shape>
    </item>
</layer-list>

